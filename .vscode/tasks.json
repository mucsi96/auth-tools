{
  "version": "2.0.0",
  "osx": {
    "options": {
      "shell": {
        "executable": "${env:SHELL}",
        "args": ["--login", "--interactive"]
      }
    }
  },
  "tasks": [
    {
      "type": "shell",
      "command": "./scripts/install_dependencies.sh",
      "label": "Install dependencies",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "label": "Start agent",
      "options": { "cwd": "${workspaceFolder}/agent" },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "npm run build",
      "isBackground": true,
      "label": "Build agent",
      "options": { "cwd": "${workspaceFolder}/agent" },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "./docker-compose.sh",
      "isBackground": true,
      "label": "Docker compose up",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "./docker-compose.sh",
      "isBackground": true,
      "label": "Docker compose up with mock identity provider",
      "options": {
        "env": {
          "MOCK_IDENTITY_PROVIDER": "true"
        }
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "docker-compose --file docker-compose.rj2.yml down",
      "isBackground": true,
      "label": "Docker compose down",
      "problemMatcher": []
    },
    {
      "type": "process",
      "command": "ansible-vault",
      "args": [
        "encrypt",
        "vars/vault.yml",
        "--vault-password-file",
        ".ansible/vault_key"
      ],
      "isBackground": true,
      "label": "Encrypt vault",
      "problemMatcher": []
    },
    {
      "type": "process",
      "command": "ansible-vault",
      "args": [
        "decrypt",
        "vars/vault.yml",
        "--vault-password-file",
        ".ansible/vault_key"
      ],
      "isBackground": true,
      "label": "Decrypt vault",
      "problemMatcher": []
    },
    {
      "type": "process",
      "command": "ansible-vault",
      "args": [
        "view",
        "vars/vault.yml",
        "--vault-password-file",
        ".ansible/vault_key"
      ],
      "isBackground": true,
      "label": "View vault",
      "problemMatcher": []
    }
  ]
}
